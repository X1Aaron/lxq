#!/bin/bash

update () {
cd /opt/lxq/
git fetch --all
git reset --hard origin/master
chmod a+x lxq
  #exit 0;
}

init () {
  update
  exec /opt/lxq/init
}

nextcloud () {
  update
  /opt/lxq/apps/nextcloud/nextcloud-install
}

rocketchat () {
  update
  /opt/lxq/apps/nextcloud/rocketchat-install
}

install () {
  update
  /opt/lxq/apps/$2/$2-install
}

$1
