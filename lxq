#!/bin/bash

update () {
cd /opt/lxq/
git fetch --all
git reset --hard origin/master
chmod a+x lxq
find /opt/lxq/ -type f -iname "*.sh" -exec chmod +x {} \;
  #exit 0;
}

init () {
  update
  exec /opt/lxq/init
}

nextcloud () {
  update
  /opt/lxq/apps/nextcloud/nextcloud-install
}

rocketchat () {
  update
  /opt/lxq/apps/nextcloud/rocketchat-install
}

$1
